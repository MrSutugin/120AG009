<section class="p-0 d-flex align-items-center position-relative overflow-hidden">
  <div class="container-fluid">
    <div class="row">
      <!-- left -->
      <div class="col-12 col-lg-6 py-4 d-md-flex align-items-center justify-content-center bg-light vh-lg-100">
        <div class="p-0">
          <!-- SVG Image -->
          <%= image_tag 'form.svg' %>
        </div>
      </div>
      <!-- Right -->
      <div class="col-12 col-lg-6 my-4">
        <div class="row">
          <div class="col-sm-10 col-xl-8 m-auto">
            <!-- Title -->
            <h1 class="h4">Регистрация</h1>
            <!-- Form START -->
           <%= render 'form' %>
            <!-- Form END -->
            <div class="mt-4 text-center">
              <span>Уже есть аккаунт? <%= link_to  'Войти', new_session_path %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
