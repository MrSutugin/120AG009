<!-- ======================= Partial shared/user/_user_info START -->
<%= render 'shared/user/user_info', user: current_user %>
<!-- ======================= Partial shared/user/_user_info END -->


<!-- ======================= Page content START -->
<section class="pt-0">
  <div class="container">
    <div class="row">
      <!-- Left sidebar START -->
      <div class="col-lg-4">
        <!-- Sidebar body -->
        <div class="offcanvas-body p-0">
          <div class="bg-light  rounded-3 pb-0 p-3 w-100 mb-4">
            <!-- ======================= Partial shared/user/_dashboard_menu START -->
            <%= render 'shared/user/dashboard_menu', user: current_user %>
            <!-- ======================= Partial shared/user/_dashboard_menu END -->
          </div>
        </div>
      </div>
      <!-- Left sidebar END -->
      <!-- Main content START -->
      <div class="col-lg-8">
        <div class="card border bg-transparent rounded-3 mb-0">
          <!-- Card header -->
          <div class="card-header bg-transparent border-bottom">
            <h4 class="card-header-title mb-0">Мои сообщения</h4>
          </div>
          <!-- Card body -->
          <div class="card-body">
            <!-- Search START -->
            <div class="row g-3 align-items-center justify-content-between mb-4">
              <div class="col-md-12">
                <form class="rounded position-relative">
                  <input class="form-control pe-5 bg-transparent" type="Найти" placeholder="Найти" aria-label="Найти">
                  <button class="btn bg-transparent px-2 py-0 position-absolute top-50 end-0 translate-middle-y" type="submit">
                    <i class="fas fa-search fs-6 "></i>
                  </button>
                </form>
              </div>
            </div>
            <!-- Search END -->
            <!-- Course list table START -->
            <div class="table-responsive-lg border-0">
              <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                <!-- Table head -->
                <thead>
                <tr>
                  <th scope="col" class="border-0 rounded-start">Мои чаты</th>
                  <th scope="col" class="border-0 rounded-end">Действия</th>
                </tr>
                </thead>

                <!-- Table body START -->
                <tbody>
                <!-- Table item -->
                <tr>
                  <!-- Course item -->
                  <td>
                    <div class="d-flex align-items-center">
                      <!-- Image -->
                      <div class="avatar w-60px h-60px mb-2 mb-md-0">
                        <img src="https://picsum.photos/800/800" class="rounded-circle" alt="">
                      </div>
                      <div class="mb-0 ms-2">
                        <!-- Title -->
                        <h6><a href="instructor-manage-course.html#">Имя пользователя</a></h6>
                        <!-- Info -->
                        <div class="d-sm-flex">
                          <p class="h6 fw-light mb-0 small">Текст сообщения</p>
                        </div>
                      </div>
                    </div>
                  </td>

                  <td class="">
                    <a href="instructor-manage-course.html#" class="btn  btn-success-soft btn-round me-1 mb-0"><i class="far fa-fw fa-edit"></i></a>
                  </td>
                </tr>

                </tbody>
                <!-- Table body END -->
              </table>
            </div>
            <!-- Course list table END -->
          </div>
        </div>
      </div>
      <!-- Main content END -->
    </div>
    <!-- Row END -->
  </div>
</section>
<!-- ======================= Page content END -->