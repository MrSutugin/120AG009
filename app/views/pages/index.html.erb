<div class="container">
  <div class="row g-4">
    <!-- Card START -->
    <div class="col-md-4">
      <div class="card overflow-hidden bg-transparent">
        <div class="position-relative">
          <!-- Image -->
          <img class="card-img-top" src="https://picsum.photos/800/601" alt="Card image">
          <!-- Overlay -->
          <div class="bg-overlay bg-dark opacity-4"></div>
          <div class="card-img-overlay d-flex align-items-start flex-column">
            <!-- Card overlay bottom -->
            <div class="w-100 mt-auto d-inline-flex">
              <div class="d-flex align-items-center bg-light bg-opacity-50 p-2 rounded-2 shadow-lg">
                <!-- Avatar -->
                <div class="avatar avatar-md me-2">
                  <img class="avatar-img rounded-circle border border-white border-3" src="https://i.pravatar.cc/300" alt="avatar">
                </div>
                <!-- Avatar info -->
                <div>
                  <h6 class="mb-0">
                    <%= link_to nil, class: 'text-dark' do %>
                      dasd
                    <% end %>
                  </h6>
                  <span class="small text-dark">Частное лицо</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Card body -->
        <div class="card-body px-0 pb-0">
          <!-- Badge and icon -->
          <div class="d-flex justify-content-between mb-3">
            <div class="hstack gap-2">
              <a href="index-3.html#" class="badge bg-dark text-white">Категория предложения</a>
            </div>
            <a href="index-3.html#" class="h6 fw-light mb-0"><i class="far fa-bookmark"></i></a>
          </div>
          <!-- Title -->
          <h5 class="card-title h6">
            <%= link_to nil do %>
              Не очень длинное описание предложения не более 70 символов
            <% end %>
          </h5>
          <!-- Rating -->
          <ul class="list-inline mb-0">
            <li class="list-inline-item h6 fw-light me-3 mb-1 mb-sm-0">
              <i class="bi bi-star-fill text-warning me-2"></i>
              <span>0.0</span>
            </li>
            <li class="list-inline-item h6 fw-light me-3 mb-1 mb-sm-0">
              <i class="bi bi-cash-stack me-2"></i>
              <strong>12 000.00</strong>
              <span>руб.</span>
            </li>
          </ul>
          <!-- Divider -->
          <hr>
          <!-- Time -->
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="d-flex align-items-center">
              <h4 class="text-success mb-0 me-2">- 10</h4>
              <strong class="mb-0">%</strong>
            </div>
            <span class="h6 fw-light mb-0 ">
              <i class="far fa-clock text-danger me-2"></i>
              6h 56m
            </span>
          </div>
        </div>
      </div>
    </div>
