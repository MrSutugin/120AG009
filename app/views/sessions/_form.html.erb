<%= form_with url: session_path do |f| %>
  <!-- Email -->
  <div class="mb-4">
    <%= f.label :email, 'Email', class: 'form-label' %>
    <div class="input-group input-group-lg">
      <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-envelope-fill"></i></span>
      <%= f.email_field :email, class: 'form-control border-0 bg-light rounded-end ps-1' %>
    </div>
  </div>
  <!-- Password -->
  <div class="mb-4">
    <%= f.label :password, 'Пароль', class: 'form-label' %>
    <div class="input-group input-group-lg">
      <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
      <%= f.password_field :password, class: 'form-control border-0 bg-light rounded-end ps-1' %>
    </div>
  </div>

  <div class="align-items-center mt-0">
    <div class="d-grid">
      <%= f.submit 'Войти', class: 'btn btn-primary mb-0' %>
    </div>
  </div>
<% end %>
